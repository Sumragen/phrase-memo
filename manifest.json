{
  "manifest_version": 2,
  "name": "Phrase-Memo",
  "version": "0.0.1",
  "description": "For those who use Google Translate PhraseBook! Memorize all your phrases with help of Phrase-Memo trainers",
  "background": {
    "persistent": false,
    "scripts": [
      "lib/jquery-2.1.3.min.js",
      "common/utils.js",
      "common/postman.js",
      "background/init.js",
      "background/main.js",
      "background/trainerOne.js"
    ]
  },
  "page_action": {
    "default_icon": {
      "19": "img/page_action/icon19.png",
      "38": "img/page_action/icon38.png"
    },
    "default_title": "Phrase-Memo",
    "default_popup": "page_action/popup.html"
  },
  "permissions": [
    "declarativeContent",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://translate.google.com/*",
        "https://translate.google.com.ua/*",
        "https://translate.google.ru/*"
      ],
      "js": [
        "lib/jquery-2.1.3.min.js",
        "common/postman.js",
        "content/main.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'unsafe-eval'; object-src 'self'"
}
