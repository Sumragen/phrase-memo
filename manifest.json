{
  "manifest_version": 2,
  "name": "Word-Memo",
  "version": "0.0.1",
  "description": "This is your personal trainer to master phrases from your Google Translate PhraseBook",
  "background": {
    "persistent": false,
    "scripts": [
      "lib/jquery-2.1.3.min.js",
      "background/init.js",
      "background/main.js"
    ]
  },
  "page_action": {
    "default_icon": {
      "19": "img/page_action/icon19.png",
      "38": "img/page_action/icon38.png"
    },
    "default_title": "Word-Memo"
    //,
    //    "default_popup": "page_action/popup.html"
  },
  "permissions": [
    "declarativeContent",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://translate.google.com.ua/*"
      ],
      "js": [
        "lib/jquery-2.1.3.min.js",
        "content/main.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'unsafe-eval'; object-src 'self'"
}
